        <TextBlock Foreground="White" Name="Összatlag" FontSize="20" HorizontalAlignment="Left" TextWrapping="Wrap" Text="Összátlag: nincsenek jegyek" VerticalAlignment="Top" Width="357" Height="40" FontFamily="Calabria" Padding="55,5,5,5" Margin="380,11,0,0"/>
        <StackPanel Name="NevValaszto" Margin="380,153,63,10"/>
        <StackPanel Name="TargyPanel" Margin="10,56,610,69"/>
        <StackPanel Name="AtlagPanel" Margin="195,55,425,69"/>
        <TextBlock Foreground="White" x:Name="Nev" FontSize="20" HorizontalAlignment="Left" TextWrapping="Wrap" Text="Név:" VerticalAlignment="Top" Width="357" Height="40" FontFamily="Calabria" Padding="55,5,5,5" Margin="380,56,0,0"/>
        <TextBox Name="Search" TextAlignment="Left" HorizontalAlignment="Left" Margin="436,101,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="233" Height="22" RenderTransformOrigin="0.509,0.45"/>
