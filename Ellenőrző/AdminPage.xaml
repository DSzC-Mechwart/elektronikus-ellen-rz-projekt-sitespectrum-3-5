        </Grid.Background>
        <TextBlock Foreground="White" Name="Targy" FontSize="20" HorizontalAlignment="Left" TextWrapping="Wrap" Text="Tárgy" VerticalAlignment="Top" Width="180" Height="40" FontFamily="Calabria" Padding="65,5,5,5" Margin="10,10,0,0"/>
